<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorLightOrange"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/dialog_choose_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_close"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Food Info"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/dialog_choose_foodname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Baked beans"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:text="Serving Size"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:weightSum="3"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/dialog_choose_jumlah"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:gravity="end"
            android:textSize="20sp"
            android:text="1"
            android:src="@drawable/ic_close"/>
        <TextView
            android:id="@+id/dialog_choose_satuan"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2.5"
            android:textSize="20sp"
            android:paddingLeft="5dp"
            android:text="Porsi"
            android:src="@drawable/ic_close"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorLightGray"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_info"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:text="Nutrition Info"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:text="Total Calories: "/>
        <TextView
            android:id="@+id/dialog_choose_kalori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="15dp"
            android:text="280"/>
    </LinearLayout>
    <Button
        android:id="@+id/dialog_choose_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorLightOrange"
        android:layout_gravity="end"
        android:layout_margin="5dp"
        android:text="Save"/>
</LinearLayout>