<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_prof"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        card_view:cardCornerRadius="4dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="111dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="false"
                android:contentDescription="avatar"
                android:cropToPadding="false"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:visibility="visible"
                card_view:srcCompat="@drawable/ava"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/semiGray"
                android:drawableLeft="@drawable/ic_diary"
                android:gravity="center_vertical|center_horizontal"
                android:text="1725 cal"
                card_view:layout_constraintStart_toEndOf="@+id/imageView2"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="91dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/semiGray"
                android:drawableLeft="@drawable/ic_weight"
                android:gravity="center_vertical|center_horizontal"
                android:text="1836 cal"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/textView3"
                card_view:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:layout_below="@+id/textView4"
                android:layout_alignBaseline="@+id/button"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/semiGray"
                android:clickable="false"
                android:gravity="center"
                android:text="50kg"
                android:textIsSelectable="false"
                android:textStyle="normal"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/imageView2"
                card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

            <Button
                android:id="@+id/button"
                android:layout_width="43dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView4"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/semiGray"
                android:drawableLeft="@drawable/ic_menu_camera"
                android:paddingLeft="9dp"
                android:textSize="8sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/textView2"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4"
                card_view:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/btArtikel"
                android:layout_width="43dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/button"
                android:layout_gravity="center_vertical|end"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:background="@color/semiGray"
                android:text="+ NEW"
                android:textSize="10sp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/textView4"
                card_view:layout_constraintVertical_bias="1.0" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rview_article"
        android:layout_width="match_parent"
        android:layout_height="312dp"
        android:layout_gravity="top"
        android:layout_marginTop="80dp" />

</FrameLayout>